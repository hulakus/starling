<properties>

	<!-- legacy block parameters -->	

	<block type='8005' id=''>
		<property name='_TITLE_' value='block_BLOCKID_' desc='title'/>
	</block>

	<!-- help -->	

	<help>
Print cv::Mat min and max values in the console.
	</help>

	<!-- block description -->	

	<label>Print Mat min/max</label>
	<input id='1' type='cv::Mat'/>
	<isstream>false</isstream>
	<icon>images/opencv.png</icon>
	<color>50:100:200:150</color>
	<description>Print image min/max</description>
	<treegroup>Input-Output</treegroup>
	
	<!-- informations for code generation -->	

	<includepath path='' />

	<library name='' />

	<librarypath path='' />

	<includes>
		<![CDATA[
		]]>
	</includes>

	<functions>
		<![CDATA[
void printMatMinmax( const char* title, const cv::Mat *in1)
{
	double minVal;
	double maxVal;
	cv::minMaxLoc(*in1, &minVal, &maxVal);

	printf( "%s min/max:\n", title);
	printf( "  min = %f\n", minVal);
	printf( "  max = %f\n", maxVal);
}
		]]>
	</functions>

	<initializations>
		<![CDATA[
		]]>
	</initializations>

	<processings>
		<![CDATA[
printMatMinmax( "_TITLE_", _INPUT1_);
		]]>
	</processings>

	<cleanings>
		<![CDATA[
		]]>
	</cleanings>
</properties>

